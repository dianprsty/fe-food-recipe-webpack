{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-plusplus": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": ["error", "always"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
